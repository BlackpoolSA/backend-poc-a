# ============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# ============================================================================
SECRET_KEY=<CAMBIAR_SECRET_KEY>

# ============================================================================
# CONFIGURACIÓN DE JWT / TOKENS
# ============================================================================
# Dev: habilita emisión de tokens en /sys/jwt/dev (usar solo en desarrollo)
AUTH_DEV_TOKEN_ENABLED=true
# Opcional: si lo defines, debes enviar header X-Dev-Key con este valor
AUTH_DEV_TOKEN_DEV_KEY=<CAMBIAR_DEV_KEY>

# Prod: habilita emisión de tokens en /sys/jwt/prod (client credentials)
AUTH_PROD_TOKEN_ENABLED=true
AUTH_CLIENT_ID=<CAMBIAR_CLIENT_ID>
AUTH_CLIENT_SECRET=<CAMBIAR_CLIENT_SECRET>

# ============================================================================
# CONFIGURACIÓN DE LLM (PROXI: OCI Generative AI)
# ============================================================================
GATEWAY_BASE_URL=https://<region>.com/gateway/openai/v1
GATEWAY_OPENAI_MODEL=<CAMBIAR_MODEL>
GATEWAY_OPENAI_API_KEY=<CAMBIAR_API_KEY>

# ============================================================================
# HUGGINGFACE TOKEN
# ============================================================================
HF_TOKEN=<CAMBIAR_HF_TOKEN>

# ============================================================================
# CONFIGURACIÓN DE ORACLE CLOUD INFRASTRUCTURE (OCI)
# ============================================================================
OCI_PROFILE=<CAMBIAR_PROFILE>
OCI_CONFIG_FILE=oci/config
OCI_REGION=<CAMBIAR_REGION>
OCI_NAMESPACE=<CAMBIAR_NAMESPACE>

# ============================================================================
# CONFIGURACIÓN DE ORACLE AUTONOMOUS DATABASE (ATP23ai)
# ============================================================================
CON_ADB_DEV_USER_NAME=<CAMBIAR_USER>
CON_ADB_DEV_PASSWORD=<CAMBIAR_PASSWORD>
CON_ADB_DEV_SERVICE_NAME=<CAMBIAR_SERVICE>
CON_ADB_WALLET_LOCATION=./wallet
CON_ADB_WALLET_PASSWORD=<CAMBIAR_WALLET_PASSWORD>

# ============================================================================
# CONFIGURACIÓN DE OCI GENERATIVE AI
# ============================================================================
CON_GEN_AI_SERVICE_ENDPOINT=https://inference.generativeai.<region>.oci.oraclecloud.com
CON_GEN_AI_EMB_MODEL_ID=<CAMBIAR_EMB_MODEL_ID>
CON_COMPARTMENT_ID=<CAMBIAR_COMPARTMENT_ID>
CON_GEN_AI_CHAT_MODEL_ID=<CAMBIAR_CHAT_MODEL_ID>
CON_GEN_AI_CHAT_MODEL_PROVIDER=<CAMBIAR_PROVIDER>

# ============================================================================
# CONFIGURACIÓN DE SERVICIO OCR DE MINERU
# ============================================================================
OCR_SERVICE_URL=http://<host>:<port>/ocr

# ============================================================================
# CONFIGURACIÓN DE AUDITORÍA MÉDICA
# ============================================================================
AUDIT_GLOSAS_FILE_ID=<CAMBIAR_FILE_ID>
